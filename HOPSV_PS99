local TeleportService = game:GetService("TeleportService")
local Players = game:GetService("Players")

local PlaceID = 8737899170 -- ID game mục tiêu
local timeInterval = 25 * 60 -- 25 phút (25*60 giây)

-- Hàm để dịch chuyển người chơi
local function teleportPlayer(player)
    if player and player:IsA("Player") then
        local success, errorMessage = pcall(function()
            TeleportService:Teleport(PlaceID, player)
        end)
        if not success then
            warn("Lỗi khi dịch chuyển người chơi: " .. errorMessage)
        end
    end
end

-- Nếu chạy trên ServerScript, dịch chuyển tất cả người chơi
local function teleportAllPlayers()
    for _, player in pairs(Players:GetPlayers()) do
        teleportPlayer(player)
    end
end

-- Vòng lặp chờ thời gian và dịch chuyển
while true do
    task.wait(timeInterval) -- Dùng task.wait() để tránh treo script
    if game:GetService("RunService"):IsServer() then
        teleportAllPlayers()
    else
        local player = game.Players.LocalPlayer
        if player then
            teleportPlayer(player)
        end
    end
end
